@* Reusable component for a simple popup for long-running processes to prevent user from navigating away from page. *@
@inherits ToggleableComponent
<link href="css/components/modal/ProgressPopUp.css" rel="stylesheet"/>

<div id="popupBackground" style="@Visibility.Style">
    <div id="progressPopUp" style="width: @(Width + "px"); height: @(Height + "px")">
        <span style="font-size: @(FontSize + "px")">@Message</span>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public string Message { get; set; } = null!;

    [Parameter]
    public int Width { get; set; } = 320;

    [Parameter]
    public int Height { get; set; } = 300;

    [Parameter]
    public int FontSize { get; set; } = 20;
}