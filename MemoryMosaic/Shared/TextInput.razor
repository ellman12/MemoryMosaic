@inherits Component

<link href="css/Components/TextInput.css" rel="stylesheet"/>

@* https://stackoverflow.com/a/75706085 *@
@if (Disabled)
{
	<input type="text" style="width: @Width" @bind="@Input" @bind:after="@OnInputChanged" @bind:event="oninput" placeholder="@Placeholder" disabled/>
}
else
{
	<input type="text" style="width: @Width" @bind="@Input" @bind:after="@OnInputChanged" @bind:event="oninput" placeholder="@Placeholder"/>
}

@code {
	[Parameter]
	public string? Input { get; set; }

	[Parameter]
	public EventCallback<string?> InputChanged { get; set; }

	private async void OnInputChanged() => await InputChanged.InvokeAsync(Input);

	[Parameter]
	public string? Placeholder { get; set; }

	[Parameter]
	public string Width { get; set; } = "200px";

	[Parameter]
	public bool Disabled { get; set; }
}