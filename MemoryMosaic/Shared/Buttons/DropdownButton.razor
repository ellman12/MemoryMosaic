@* Button with an icon and text. *@
@inherits IconTextButton

<link href="css/components/buttons/DropdownButton.css" rel="stylesheet"/>

<button id="@ID" class="dropdownBtn @Class" @onclick="@HandleClick" title="@Title">
	<MaterialIcon Icon="@Icon" IconStyle="@IconStyle"/>
	<span style="color: @TextColor; @TextStyle">@Text</span>
</button>