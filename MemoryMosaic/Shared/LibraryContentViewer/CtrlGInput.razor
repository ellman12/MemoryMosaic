@* Re-usable component for allowing user to choose the date taken they want LCV to start at. *@
@inherits ToggleableComponent
<link href="css/Components/LibraryContentViewer/CtrlGInput.css" rel="stylesheet"/>

<ModalBackground Visibility="@Visibility">
	<div id="ctrlGInput">
		<span>Choose New Starting Date Taken:</span>
		
		<div>
			<input type="date" @bind="@NewStartDate"/>
			<IconButton Icon="check" OnClick="@(() => { Disable(); StartDateChanged.Invoke(); })"/>
			<IconButton Icon="close" OnClick="@Disable"/>
		</div>
	</div>
</ModalBackground>

<KeyboardShortcuts CtrlG="@Enable"/>

@code {
	[Parameter, EditorRequired]
	public Action StartDateChanged { get; set; } = null!;
	
	public DateTime NewStartDate { get; private set; } = DateTime.Today;
}